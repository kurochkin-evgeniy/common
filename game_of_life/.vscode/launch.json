    "version": "0.2.0",
    "configurations": [
        {
            "name": "Play the game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program":"${workspaceFolder}/cmd",
            "args": [
                "play",
                "--load=C:\\repos\\1.txt",
                "--save=C:\\repos\\1.gif",
                ]
        },
        {
            "name": "Gen the game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program":"${workspaceFolder}/cmd",
            "args": [
                "gen",
                "--f=30x30",
                ]
        },
        {
            "name": "Game in browser",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program":"${workspaceFolder}/cmd/server",

            "serverReadyAction": {
                "pattern": "listening on port ([0-9]+)",
                "uriFormat": "http://localhost:5008/asd",
                "action": "openExternally"
              }
        }
    ]
}